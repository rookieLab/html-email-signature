{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.5.0",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "minimum_chrome_version": "93",
  "icons": {
    "16": "src/icons/16.png",
    "32": "src/icons/32.png",
    "48": "src/icons/48.png",
    "96": "src/icons/96.png",
    "128": "src/icons/128.png"
  },
  "action": {
    "default_title": "__MSG_appName__",
    "default_icon": {
      "16": "src/icons/16.png",
      "24": "src/icons/24.png",
      "32": "src/icons/32.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
