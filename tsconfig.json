{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "target": "esnext",
    "outDir": "build",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "types": ["chrome"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "chrome": [
        "node_modules/@types/chrome"
      ]
    }
  },
  "files": [],
  "include": [
    "packages/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "typings/**/*.ts",
    "typings/**/*.d.ts",
    "src/hooks/useMaterial.js",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}